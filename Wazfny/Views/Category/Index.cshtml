@model IEnumerable<Wazfny.Models.Category>

@{
    ViewBag.Title = "قائمة أنواع الوظائف";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}
<h2 >قائمة أنواع الوظائف</h2>
<hr />
<p>
    @Html.ActionLink("إنشاء نوع جديد", "Create")
</p>
<div class="table-responsive">
    <table class="table table-bordered table-striped table-hover table-condensed">
       
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.CategoryName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.CategoryDescription)
                </th>
                <th></th>
            </tr>
     
      
      
        @foreach (var item in Model) {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.CategoryName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CategoryDescription)
                </td>
                <td style="width:150px;">
                    @Html.ActionLink("تعديل", "Edit", new { id=item.Id }) |
                    @Html.ActionLink("تفاصيل", "Details", new { id=item.Id }) |
                    @Html.ActionLink("حذف", "Delete", new { id=item.Id })
                </td>
            </tr>
        }

    </table>
</div>