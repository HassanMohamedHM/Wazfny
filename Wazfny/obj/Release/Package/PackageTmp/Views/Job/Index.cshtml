@model IEnumerable<Wazfny.Models.Job>

@{
    ViewBag.Title = "إدارة الوظائف";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<h2>قائمة الوظائف</h2>
<hr />
<p>
    @Html.ActionLink("إنشاء وظيفة جديدة", "Create")
</p>
<div class="table-responsive">
    <table class="table table-bordered table-striped table-hover table-condensed">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Category.CategoryName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.JobTitle)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.JobContent)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.JobImage)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Category.CategoryName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.JobTitle)
                </td>
                <td>
                    @Html.Raw(item.JobContent)
                    @*@Html.DisplayFor(modelItem => item.JobContent)*@
                </td>
                <td style="width:100px;">
                    <img src="~/Uploads/@Html.DisplayFor(modelItem => item.JobImage)" class="img-thumbnail img-responsive" style="width:100px;height:auto;" />
                </td>
                <td style="width:150px">
                    @Html.ActionLink("تعديل", "Edit", new { id = item.Id }) |
                    @Html.ActionLink("تفاصيل", "Details", new { id = item.Id }) |
                    @Html.ActionLink("حذف", "Delete", new { id = item.Id })
                </td>
            </tr>
        }

    </table>
</div>