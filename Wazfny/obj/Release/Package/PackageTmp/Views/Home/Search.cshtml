@model IEnumerable<Wazfny.Models.Job>

@{
    ViewBag.Title = "Search";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

    <div class="panel panel-info">
        <div  class="panel-heading"> <h1>نتائج البحث.</h1></div>
        <div class="panel-body">
            <div class="row ">
                @foreach (var job in Model)
                {
                    <div class="col-md-3 thumbnail" style="margin-left:20px;margin-bottom:30px;min-height:380px;">
                        <img style="width:100%;height:200px" src="~/Uploads/@job.JobImage" />
                        <h4>@Html.DisplayFor(jobitem => job.JobTitle)</h4>
                        <h6>@Html.DisplayFor(jobitem => job.JobContent)</h6>
                        @Html.ActionLink("تفاصيل الوظيفة", "Details", new { jobId = job.Id }, new { @class = "btn btn-primary" })
        
                        
                    </div>
                }
            </div>
        </div>
    </div>



