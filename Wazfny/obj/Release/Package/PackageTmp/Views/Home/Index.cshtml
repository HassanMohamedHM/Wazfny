@model IEnumerable<Wazfny.Models.Category>
@{
    ViewBag.Title = "الصفحة الرئيسية";
}

<div class="jumbotron alert alert-info" style="margin-top:0px;">
    <h3>مرحباً بك عزيزى الزائر.</h3>
    <p >
        ASP.NET is a free web framework for building great Web sites and Web applications using HTML,CSS and JavaScript.
    </p>
    <p>
        <a href="http://asp.net" class="btn btn-primary btn-lg">Learn more &raquo;</a>
    </p>
</div>

@foreach (var category in Model)
{
   <div class="panel panel-info">
       <div class="panel-heading">
       <h1>@Html.DisplayFor(cat => category.CategoryName)</h1></div>
       <div class="panel-body">
           <h5>@Html.DisplayFor(cat => category.CategoryDescription)</h5>
           <div class="row ">
               @foreach (var job in category.Jobs)
           {
           <div class="col-md-3 thumbnail" style="margin-left:20px;margin-bottom:30px;min-height:380px;">
               <img style="width:100%;height:200px" src="~/Uploads/@job.JobImage" />
               <h4>@Html.DisplayFor(jobitem => job.JobTitle)</h4>
               <h6>@Html.Raw(HttpUtility.HtmlDecode(@Html.DisplayFor(jobitem => job.JobContent).ToString()))</h6>
               @Html.ActionLink("تفاصيل الوظيفة", "Details", new { jobId = job.Id },new { @class = "btn btn-primary" })
              
           </div>
           }
           </div>
       </div>
   </div>

}
