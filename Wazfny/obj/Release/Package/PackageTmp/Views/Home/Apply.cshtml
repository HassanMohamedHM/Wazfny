@model Wazfny.Models.ApplyForJob

@{
    ViewBag.Title = "التقدم إلى الوظيفة";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}
<h2>التقدم إلى الوظيفة</h2>
<hr />
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <div id="Msg" >
            @if (@ViewBag.Result != null)
            {
                <h3>@ViewBag.Result</h3>
            }
            
        </div>
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group">
            @Html.Label("Message", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextArea("Message", new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessage("Message", "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input  type="submit" value="تأكيد الطلب" class="btn btn-success" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("الرجوع إلى الصفحة الرئيسية", "Index")
</div>

